{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src", "**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
  "exclude": [".github", ".yarn", "node_modules", "**/*.css"]
}
